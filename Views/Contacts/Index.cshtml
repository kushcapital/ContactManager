@model IEnumerable<ContactManager.Models.Contact>
@{
    ViewData["Title"] = "Contacts";
}

<h2>Contacts</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add Contact</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ContactId" asp-route-slug="@item.Slug">
                        @item.FirstName
                    </a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ContactId" asp-route-slug="@item.Slug">
                        @item.LastName
                    </a>
                </td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>@item.Category?.Name</td>
                <td>@item.DateAdded.ToString("MM/dd/yyyy")</td>
            </tr>
        }
    </tbody>
</table>
