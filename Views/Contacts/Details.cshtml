@model ContactManager.Models.Contact
@{
    ViewData["Title"] = "Contact Details";
}

<h2>Contact Details</h2>

<div>
    <h4>@Model.FirstName @Model.LastName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Organization</dt>
        <dd class="col-sm-10">@Model.Organization</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>

        <dt class="col-sm-2">Date Added</dt>
        <dd class="col-sm-10">@Model.DateAdded.ToString("MM/dd/yyyy")</dd>
    </dl>
</div>

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ContactId">Edit</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.ContactId">Delete</a>
    <a class="btn btn-secondary" asp-action="Index">Home</a>
</div>
