@model ContactManager.Models.Contact

<h2>Details</h2>

<div>
    <h4>@Model.FirstName @Model.LastName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>
        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Organization</dt>
        <dd class="col-sm-10">@Model.Organization</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category.Name</dd>
        <dt class="col-sm-2">Date Added</dt>
        <dd class="col-sm-10">@Model.DateAdded.ToString("d")</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ContactId" class="btn btn-primary">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.ContactId" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Home</a>
</div>